---
import { getCollection } from "astro:content";

import MainLayout from "@layouts/MainLayout.astro";
import AuthorCard from "@components/AuthorCard.astro";

import { SITE_CONFIG } from "src/config/site-config";

const authors = await getCollection("author");
---

<MainLayout title="Listado de autores">
  <section class="container px-6 py-10 mx-auto">
    <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">{SITE_CONFIG.title}</h1>

    <a class="mr-2 text-white" href="/blog/1">Blog paginado</a>
    <a class="mr-2 text-white" href="/authors">Autores</a>
  </section>

  <section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
    {
      authors.map(author => (
        <AuthorCard author={author} />
      ))
    }
  </section>
</MainLayout>