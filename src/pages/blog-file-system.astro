---
import BlogPost from "@components/BlogPost.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { SITE_CONFIG } from "src/config/site-config";


//* Obteniendo toda la info de los posts de los archivos .md y .mxd 
const posts = await Astro.glob("./posts-old/*.{md,mxd}");


---

<MainLayout title="Fernando's blog">
  <section class="bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">{SITE_CONFIG.title}</h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {
          posts.map(post => (
            <BlogPost {...post} />
          ))
        }
      </div>
    </div>
  </section> 
</MainLayout>
